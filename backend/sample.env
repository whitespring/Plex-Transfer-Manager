# Plex Transfer Manager - Sample Environment Configuration
# Copy this file to .env and replace with your actual values

# ==========================================
# SSH PASSWORDS (Required)
# ==========================================
# Passwords for SSH connections to your Plex servers
# These are used for initial SSH key setup and fallback authentication

PLEX_SERVER1_SSH_PASSWORD=your_server1_ssh_password_here
PLEX_SERVER2_SSH_PASSWORD=your_server2_ssh_password_here

# ==========================================
# BACKEND SERVER CONFIGURATION (Optional)
# ==========================================
# These override the defaults in config.json

# Port for the backend API server (default: 3001)
PORT=3001

# Host binding for the backend server (default: 0.0.0.0)
HOST=0.0.0.0

# ==========================================
# DEBUGGING (Optional)
# ==========================================
# Enable debug logging
DEBUG=false

# ==========================================
# ADDITIONAL SERVERS (Optional)
# ==========================================
# Add more server passwords as needed
# PLEX_SERVER3_SSH_PASSWORD=your_server3_ssh_password_here
# PLEX_SERVER4_SSH_PASSWORD=your_server4_ssh_password_here
